# Trading Agent Environment Variables
# Copy this file to .env and fill in your actual values

# Logging Configuration
AGENT_LOG_LEVEL=info
AGENT_LOG_FORMAT=simple
AGENT_LOG_FILE=logs/trading_agent.log

# CCXT (Crypto) Configuration
CCXT_EXCHANGE=binance
CCXT_API_KEY=your_ccxt_api_key_here
CCXT_API_SECRET=your_ccxt_api_secret_here

# Alpaca (Equities/ETFs) Configuration
ALPACA_KEY_ID=your_alpaca_key_id_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Hugging Face Configuration
HF_TOKEN=your_huggingface_token_here

# Notification Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Trading Configuration
AGENT_TICKERS=BTC,ETH,SPY
AGENT_TIMEFRAME=1h
AGENT_BUY_THRESHOLD=0.7
AGENT_SELL_THRESHOLD=-0.7
AGENT_TECH_WEIGHT=0.6
AGENT_SENTIMENT_WEIGHT=0.4

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
